<div class="center hero-unit">
	<h1>Recipe Book</h1>
	<h2>Learn how to cook and prepare delicious meals in no time!</h2>
</div>
<div class="row-fluid">
	<% if signed_in? %>
	<div class="span2">
		<ul class="nav nav-list">
			<li class="nav-header"><i class="icon-list"></i>Menu</li>
				<li><%= link_to "Create new Category", new_category_path %></li>
			
				<li><%= link_to "Create new Recipe", new_recipe_path %></li>
		</ul>
	</div>

	<% else %>
	<div class="span2">
		<div class="btn-group">
			<a class="btn btn-info" href="#"><i class="icon-user icon-white"></i></a>
		<%= link_to "Signin", new_session_path, class: "btn btn-info" %>
	</div>
	</div>
	<% end %>
	<div class="span5">
		<h2>List of categories available: </h2><br />
		<% @categories.each do |categories| %>
			<table class="table table-hover">
				<tbody>
				<tr>
					<td><%= link_to categories.name, categories %></td>
				</tr>
			</tbody>
			</table>
		<% end %>
	</div>
	<div class="span5">
		<h2><%= link_to "List of all available recipes:", recipes_path %></h2><br />
		<table class="table table-hover">
			<caption>List of all available recipes</caption>
			<thead>
			<tr>
				<th>Recipe Name</th>
				<th>Category</th>
			</tr>
		</thead>
		<tbody>
			<% @recipes.each do |recipes| %>
				<tr>
					<td><%= link_to recipes.name, recipes %></td>
					<td><%= recipes.category.name %></td>
				</tr>
			<% end %>
		</tbody>
			</table>
	</div>
</div>