<div class="row">
  <div class="span8 offset2">
<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group warning">
    <%= f.label :name %><br />
    <%= f.text_field :name, placeholder: "name" %>
  </div>
  <div class="field">
    <%= f.label :Category %>
    <% @category.each do |category| %>
      <%= f.radio_button :category_id, category.id %> <%= category.name %><br />
    <% end %>
  </div>
  <div class="control-group success">
    <%= f.label :instruction %><br />
    <%= f.text_area :instruction, rows: 5, class: "input-xlarge" %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_select :date %>
  </div>
  <div class="form-actions">
  <div class="row">
  <div class="span1">
    <%= f.submit "Save new recipe", class: "btn btn-large btn-primary" %>
  </div>
  <div class="span2 offset1">
    <%= link_to "Back", recipes_path, class: "btn btn-large" %>
  </div>
</div>
<% end %>
</div>
</div>